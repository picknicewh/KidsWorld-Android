<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_layout">
    <TextView
        android:layout_margin="@dimen/space_x2"
        android:textColor="@color/black"
        android:text="我们已发送短信验证码到你的手机"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_marginRight="@dimen/space_x2"
        android:text="+86 13735484622"
        android:id="@+id/tv_rnumber"
        android:layout_width="match_parent"
        android:textSize="@dimen/ts_xx_large"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_x2"
        android:padding="@dimen/space"
        android:background="@drawable/password_selecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/phone"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_rcheckNumber"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:hint="请输入验证码"
            android:textColorHint="@color/pgrey"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_x2"
        android:padding="@dimen/space"
        android:background="@drawable/password_selecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/phone"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_rpassword"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:hint="请输入验证码"
            android:textColorHint="@color/pgrey"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_margin="@dimen/space_x2"
        android:layout_marginTop="@dimen/space_x2"
        android:id="@+id/bt_conform"
        android:text="重置密码"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_xx_large"
        android:background="@drawable/conform_selecter"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/space_x0.5"
        android:text="您可以在(58)秒后重新获取"
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:textSize="@dimen/ts_xx_large"
        android:textColor="@color/pgrey"
        android:layout_height="wrap_content" />
</LinearLayout>
